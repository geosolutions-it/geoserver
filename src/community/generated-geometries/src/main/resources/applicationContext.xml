<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="generatedGeometryConfigPanel"
        class="org.geoserver.web.data.resource.ResourceConfigurationPanelInfo">
    <property name="id" value="generatedGeometry"/>
    <property name="titleKey" value="data.resource.config.generated-geometry"/>
    <property name="componentClass"
              value="org.geoserver.generatedgeometries.web.GeneratedGeometryConfigurationPanel"/>
  </bean>

  <bean id="longLatStrategy" class="org.geoserver.generatedgeometries.strategy.longitudelatitude.LongLatGeometryGenerationStrategy"/>

  <bean id="longLatStrategyPanel" class="org.geoserver.generatedgeometries.web.longitudelatitude.LongLatGeometryStrategyUIGenerator">
    <constructor-arg ref="longLatStrategy"/>
  </bean>

  <bean id="wkbStrategy" class="org.geoserver.generatedgeometries.strategy.wkb.WkbGeometryGenerationStrategy"/>

  <bean id="wkbStrategyPanel" class="org.geoserver.generatedgeometries.web.wkb.WkbStrategyUIGenerator">
    <constructor-arg ref="wkbStrategy"/>
  </bean>

  <bean id="wktStrategy" class="org.geoserver.generatedgeometries.strategy.wkt.WktGeometryGenerationStrategy"/>

  <bean id="wktStrategyPanel" class="org.geoserver.generatedgeometries.web.wkt.WktStrategyUIGenerator">
    <constructor-arg ref="wktStrategy"/>
  </bean>

  <bean id="longLatGeometryResourcePoolCallback" class="org.geoserver.generatedgeometries.core.GeometryGenerationRetypingCallback">
<!--    <constructor-arg ref="longLatStrategy"/>-->
  </bean>

</beans>
